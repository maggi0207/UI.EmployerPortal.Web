<div class="select-field-wrapper">
    <div class="select-field @(HasError ? "select-field--error" : "")">
        <label class="select-field__label">@Label</label>
        <select class="select-field__select"
                value="@Value"
                @onchange="OnChange">
            @if (!string.IsNullOrEmpty(Placeholder))
            {
                <option value="" disabled>@Placeholder</option>
            }
            @foreach (var option in Options)
            {
                <option value="@option.Value">@option.Text</option>
            }
        </select>
        <div class="select-field__arrow">
            <svg width="12" height="8" viewBox="0 0 12 8" fill="none">
                <path d="M1 1L6 7L11 1" stroke="#003663" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </div>
    </div>
    @if (HasError)
    {
        <span class="select-field__error">@ErrorMessage</span>
    }
</div>
