<div class="text-field-wrapper">
    <div class="text-field @(HasError ? "text-field--error" : "")">
        <label class="text-field__label">@Label</label>
        <input type="@Type"
               class="text-field__input"
               value="@Value"
               @oninput="OnInput"
               placeholder="" />
    </div>
    @if (HasError)
    {
        <span class="text-field__error">@ErrorMessage</span>
    }
</div>
